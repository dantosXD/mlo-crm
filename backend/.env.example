# Runtime
NODE_ENV=development
PORT=3000

# URLs
FRONTEND_URL=http://localhost:5173
API_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mlo_dashboard?schema=public

# Auth
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=30d
REFRESH_TOKEN_COOKIE_NAME=refresh_token

# Crypto
ENCRYPTION_KEY=change-me-to-32-plus-chars

# CSRF / Webhooks
WEBHOOK_TIMESTAMP_TOLERANCE_SECONDS=300
WEBHOOK_REPLAY_TTL_SECONDS=600
WORKER_LOCK_TTL_SECONDS=3540

# Optional observability
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=

# Object storage
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=mlo-documents
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123
REDIS_URL=redis://localhost:6379
